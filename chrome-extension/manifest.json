{
    "manifest_version": 2,
    "version": "0.1.0",
    "name": "disqordle",
    "description": "Format Wordle and Quordle results in a Discord-friendly, Dordle-like manner.",
    "background": {
        "scripts": [ "background.js" ],
        "persistent": true
    },
    "permissions": [
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": [ "*://www.quordle.com/*" ],
            "js": [ "quordle.js" ]
        },
        {
            "matches": [ "*://www.nytimes.com/games/wordle/index.html" ],
            "js": [ "wordle.js" ]
        }
    ],
    "icons": {
        "16": "/icons/16.png",
        "32": "/icons/32.png",
        "48": "/icons/48.png",
        "128": "/icons/128.png"
    }
}